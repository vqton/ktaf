@page "/"

<PageTitle>Trang chủ - AccountingERP</PageTitle>

<h1><i class="bi bi-calculator me-2"></i>Chào mừng đến với AccountingERP</h1>

<p class="lead">Hệ thống kế toán tuân thủ TT99/2025/TT-BTC</p>

<FluentDivider></FluentDivider>

<div class="row mt-4">
    <div class="col-md-4">
        <FluentCard>
            <h5><i class="bi bi-journal-text me-2"></i>Bút toán</h5>
            <p>Quản lý bút toán kế toán với đầy đủ thông tin chứng từ gốc.</p>
            <FluentButton Appearance="Appearance.Accent" OnClick="@(() => Navigation.NavigateTo("/journal-entries"))">
                Xem bút toán
            </FluentButton>
        </FluentCard>
    </div>
    
    <div class="col-md-4">
        <FluentCard>
            <h5><i class="bi bi-list-ol me-2"></i>Hệ thống TK</h5>
            <p>Hệ thống tài khoản theo chuẩn TT99 với 56 tài khoản.</p>
            <FluentButton Appearance="Appearance.Accent" OnClick="@(() => Navigation.NavigateTo("/accounts"))">
                Xem tài khoản
            </FluentButton>
        </FluentCard>
    </div>
    
    <div class="col-md-4">
        <FluentCard>
            <h5><i class="bi bi-graph-up me-2"></i>Báo cáo</h5>
            <p>Báo cáo tài chính: B01, B02, B03-DN theo quy định.</p>
            <FluentButton Appearance="Appearance.Accent" OnClick="@(() => Navigation.NavigateTo("/reports"))">
                Xem báo cáo
            </FluentButton>
        </FluentCard>
    </div>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;
}
